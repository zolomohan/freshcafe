<% if current_user == @user %>
    <% if @user.admin? %>
        <h2 class="mt-5">Admin: <span class="text-muted"><%= @user.email %></span></h2>
        <hr>
        <%= link_to 'New Item', new_item_path, class: "ui button"  %>
        <%= link_to 'New Category', new_category_path, class: "ui button"  %>
        <%= link_to "View Users", users_path, class: "ui button" %>
        <%= link_to "View Orders", orders_path, class: "ui button" %>
        <%= link_to "Edit Account", edit_account_path, class: "ui button" %>
        <br>
        <form class="mt-4" action="/orders_report/" method="GET">
            <label class="lead me-2" for="from" style="font-family: 'Montserrat'; font-weight: 400;">From</label>
            <input type="date" name="from" id="from" class="me-4" required>
            <label class="lead me-2" for="from" style="font-family: 'Montserrat'; font-weight: 400;">To</label>
            <input type="date" name="to" id="from" class="me-4" required>
            <input type="submit" value="Fetch Report" class="ui button">
        </form>
    <% elsif !@user.admin? && @user.clerk? %>
        <h2 class="mt-5">Staff: <span class="text-muted"><%= @user.email %></span></h2>
        <hr>
        <%= link_to "All Orders", orders_path, class: "ui button" %>
        <%= link_to "Edit Account", edit_account_path, class: "ui button" %>
    <% else %>
        <h2 class="mt-5"><%= current_user.email %></h2>
        <hr>
        <%= link_to "Edit Account", edit_account_path, class: "ui button" %>
    <% end %>
<% else %>
    <h2 class="mt-5"><%= "Admin: " if @user.admin? %><%= "Staff: " if @user.clerk? && !@user.admin %> <span class="text-muted"><%= @user.email %></span></h2>
<% end %>

<h2 class="mt-5">Past Orders</h2>
<hr>
<% if @user.orders.count == 0 %>
    <p class="lead text-muted mt-4">No Orders Yet!</p>
<% else %>
    <%= render 'orders/list', orders:@user.orders %>
<% end %>

<% if @user.id == current_user.id && user_signed_in? %>

<% end %>