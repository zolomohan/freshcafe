<table class="ui celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total Price</th>
        <th colspan="4"></th>
    </tr></thead>
    <tbody>
      <% items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td>₹ <%= item.price %></td>
        <td>₹ <%= item.price * item.quantity %></td>
      </tr>
    <% end %>
  </table>