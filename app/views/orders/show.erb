<h1 class="mt-5">Order #<%= @order.id %></h1>
<h3 class="mb-5 text-muted"><%= @order.user_email %></h3>

<p class="lead mt-5 mb-3" style="font-size: 20px;"><strong>Status:</strong> <%= @order.delivered ? "Delivered" : "Pending Delivery" %></p>
<%= render 'order_item_list', items: @order.order_items %>

<p class="lead my-5" style="font-size: 25px;">Total Price: â‚¹ <%= @order.total_price %></p>

<% if current_user.admin? || current_user.clerk? %>
