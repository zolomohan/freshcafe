<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="ui fluid input my-3">
    <%= form.text_field :name, class: "ui fluid input", placeholder: "Name" %>
  </div>  

  <div class="ui fluid input my-3">
    <%= form.number_field :price, placeholder: "Price" %>
  </div>

  <div class="ui form my-3">
    <%= form.text_area :description, placeholder: "Description" %>
  </div>

  <div class="field">
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <div class="ui checkbox">
      <%= cb.check_box %>
      <label class="me-3"><%= cb.text %></label>
    </div>
      <% end %>
  </div>

  <div class="actions">
    <%= form.submit class: "ui button mt-4" %>
  </div>
<% end %>
